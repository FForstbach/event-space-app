<div class="form-new">
<%= simple_form_for :venue, url: venues_path, method: "get",
  wrapper: :inline_form,
  html: { class: 'form-inline' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :city, collection: [["Berlin","berlin"],["Wien","wien"],["Köln","köln"]], input_html: { name: 'city' }, prompt: "Select City", selected: params[:city] %>
  <%= f.input :capacity, collection: [["10-20", 20], ["20-30", 30], ["30-40", 40], ["40-50", 50], ["50-60", 60],["60-70", 70], ["70-80", 80], ["80-90", 90], ["90-100", 100], ["100 +", 110]], input_html: { name: 'capacity' }, prompt: "Select guests", selected: params[:capacity] %>
  <%= f.submit "Search", class: "btn btn-primary", name: nil %>
<% end %>
</div>
