<div class="home-banner">
  <%= image_tag "banner3.png", class: "banner" %>
  </div>

  <hr style="border-bottom: 0px">
    <div class="container">
        <div class="row">
          <div class="home-content">
            <h1>How we work</h1>
            <div class="col-md-4 border-right">
              <%= image_tag "searchicon.png" %><p>browse venues</p>
            </div>
            <div class="col-md-4 border-right">
              <p>select date</p>
            </div>
            <div class="col-md-4">
              <p>book it</p>
            </div>
          </div>
        </div>
    </div>


    <div class="row">
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "barvenue.jpg", class: "venues" %>
          <div class="card-category">bars</div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "coworkingspaces.jpg", class: "venues" %>
          <div class="card-category">co-working spaces</div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "clubspace.jpg", class: "venues" %>
          <div class="card-category">clubs</div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "openconceptspaces.jpg", class: "venues" %>
          <div class="card-category">mixed-use</div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "outdoorspace.jpg", class: "venues" %>
          <div class="card-category">outdoor space</div>
        </div>
      </div>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
        <%= image_tag "restaurants.jpg", class: "venues" %>
          <div class="card-category">restaurants</div>
        </div>
      </div>
  </div>
  <div class="row">
    <div class="text-center featured_venues">
      <p> <%= link_to "show venues", venues_path, class: "home-button" %>
      </p>
      <div class="col-xs-6 col-sm-4">
        <div class="card">
          <% @featured_venues.each do |venue| %>
          <%= image_tag venue.photo %>
          <%= venue.name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>









