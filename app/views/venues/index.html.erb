<%= render "shared/search_form" %>

<hr>
<div class="row text-center">
<h1> VENUES </h1>
  <div class="col-xs-6 col-sm-3">
    <div class="card text-center">
        <div class="card-body">
          <% @venues.each do |venue| %>
            <p><%= venue.name %></p>
            <p><%= venue.address %></p>
            <p><%= venue.capacity %></p>
            <p><%= venue.price %></p>
            <hr>
          <% end %>
        </div>
    </div>
  </div>
</div>



