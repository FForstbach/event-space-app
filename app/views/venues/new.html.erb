
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h2 class="text-center">Create a new venue</h2>

    <%= simple_form_for @venue do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :capacity %>
      <%= f.input :price %>
      <%= f.input :category, collection: ["Party", "Conference"] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Submit Venue", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Go back to Venues", venues_path %>

    </div>
  </div>
</div>
